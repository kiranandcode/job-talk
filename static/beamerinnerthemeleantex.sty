% Frame title
\defbeamertemplate*{title page}{leantex}[1][]{
  \begin{tikzpicture}[overlay, remember picture]
    \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);

    \draw[fill=primary1!20,draw=none] (-1, 10.0) rectangle (0.025*\the\paperwidth + 10.5, -\the\paperheight);
    \draw[fill=primary1,draw=none] (-1, 10.0) rectangle (0.025*\the\paperwidth, -\the\paperheight);

    \draw [fill=primary1,draw=none] (2, -3.5) rectangle (8, -3.25);
    \node[fill opacity=0.25] at (12, -3.5) {\color{primary1}\fontsize{300}{20}\selectfont{$\lambda$}};
  \end{tikzpicture}

   \vskip2cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=2cm,#1]{title page header}
      \usebeamerfont{title}\inserttitle%
    \end{beamercolorbox}%
    \vskip1.75cm% 
    \begin{beamercolorbox}[wd=12cm,leftskip=2.5cm,#1]{author}
      \usebeamerfont{author}\fontsize{10}{10}\selectfont{\insertauthor}%
    \end{beamercolorbox}
     \vskip0.2cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=2.5cm,#1]{date}
      \usebeamerfont{author}\fontsize{10}{10}\selectfont{\insertinstitute}%
    \end{beamercolorbox}
     \vskip0.2cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=2.5cm,#1]{date}
      \usebeamerfont{author}\fontsize{10}{10}\selectfont{\insertdate}%
    \end{beamercolorbox}
  \vfill
}

\defbeamertemplate*{background canvas}{leantex}{
  \begin{tikzpicture}[remember picture]
    \ifx\insertframetitle\@empty
    % \ifbeamer@plainframe
      % no background for plain frames
    \else
      \node at ($(current page.center)$) [opacity=0.1, scale=12, text=primary1] {};
      % lambda in center-right
      \node at ($(current page.center)+(12,-2)$) [opacity=0.1, scale=12, text=primary1] {$\lambda$};
      % Pi in bottom-left
      \node at ($(current page.center)+(9,-0)$) [opacity=0.1, scale=8, rotate=20, text=primary1] {$\Pi$};
      % Sigma in top-right
      \node at ($(current page.center)+(12,2)$) [opacity=0.1, scale=6, rotate=-20, text=primary1] {$\Sigma$};
    \fi
  \end{tikzpicture}
}

